modules = ["cpp-clang14", "c-clang14", "python-3.11"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt", "pkg-config", "xsimd"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "QuantStack Frontend"

[[workflows.workflow]]
name = "QuantStack Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd QuantStack-main && streamlit run app.py --server.address=0.0.0.0 --server.port=5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["streamlit", "run", "QuantStack-main/app.py", "--server.address=0.0.0.0", "--server.port=5000"]
